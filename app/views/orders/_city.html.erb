<%
  zap_delivery = ['Доставка по Космосу/Пески', 'Доставка по Центру города', 'Доставка по Шевченковскому', 'Доставка по Правому берегу', 'Самовывоз с Космоса']
  zap_pay = ['Оплата курьеру', 'Расчет по Приват24']
  other_delivery = ['Новая почта', 'Ин-тайм', 'Другая почта']
  other_pay = ['Приват24', 'Аваль', 'Другое']
%>
<% if @city == 'Запорожье' %>
    <div class="form-group">
      <label for="zap_delivery" class="col-sm-2 control-label">Район доставки</label>
      <div class="col-sm-10">
        <%= select_tag 'order[delivery]', options_for_select(zap_delivery.collect { |delivery| [delivery, delivery] }), {:include_blank => 'Выберите район доставки', :class => 'form-control', id: 'zap_delivery', "required" => true} %>
      </div>
    </div>
    <div class="form-group">
      <label for="zap_pay" class="col-sm-2 control-label">Способы оплаты</label>
      <div class="col-sm-10">
        <%= select_tag 'order[pay_type]', options_for_select(zap_pay.collect { |pay| [pay, pay] }), {:include_blank => 'Выберите способ оплаты', :class => 'form-control', id: 'zap_pay', "required" => true} %>
      </div>
    </div>

<% else %>

    <div class="form-group">
      <label for="other_delivery" class="col-sm-2 control-label">Способ доставки</label>
      <div class="col-sm-10">
        <%= select_tag 'order[delivery]', options_for_select(other_delivery.collect { |delivery| [delivery, delivery] }), {:include_blank => 'Выберите район доставки', :class => 'form-control', id: 'other_delivery', "required" => true} %>
      </div>
    </div>
    <div class="form-group">
      <label for="other_pay" class="col-sm-2 control-label">Способы оплаты</label>
      <div class="col-sm-10">
        <%= select_tag 'order[pay_type]', options_for_select(other_pay.collect { |pay| [pay, pay] }), {:include_blank => 'Выберите способ оплаты', :class => 'form-control', id: 'other_pay', "required" => true} %>
      </div>
    </div>

<% end %>