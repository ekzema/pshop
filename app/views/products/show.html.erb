<div class="container">
  <div class="row">
    <div class="col-sm-2 cat">

    </div>
    <div class="col-sm-10">
      <div class="row text-center color2">
        <div class="col-xs-6">
          <div class="col-sm-4 color4">
            <ul class="">
              <% @product.product_slide_images.each do |slide| %>
                  <li>
                    <%= link_to slide.image.url(:showproduct), class: 'gallery', rel: 'group', title: @product.name do %>
                        <%= image_tag slide.image.url(:showproduct), alt: @product.name, title: @product.name %>

                  <% end %>
                  </li>
              <% end %>
            </ul>
          </div>
          <div class="col-sm-8 color3"><%= image_tag @product.image.url(:showproduct), alt: @product.name, title: @product.name %></div>
        </div>
        <div class="col-xs-6">
          <h3><%= @product.name %></h3>
          <% if @product.share == 1 %>
          <p><span class="sharePrice"><%= @product.share_price %></span>грн</p>
              <% end %>
          <p><%= @product.price %>грн</p>
          <div id="buttonAddTocart_<%= @product.id %>">
            <% if @cart.line_items.find_by_product_id(@product).present? %>
                <span class="inCart">Товар в корзине</span>
            <% else %>
                <%= button_to 'Добавить в корзину', line_items_path(product_id: @product), remote: true %>
            <% end %>
          </div>
          <p><%= link_to 'Вернуться в категорию', category_path(@product.category_id) %></p>
        </div>
        <div class="col-xs-12">
          <h3>Описание</h3>
          <p class="showProductDesc"><%= @product.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>

