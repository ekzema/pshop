

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'login-form'}) do |f| %>
    <div class="login-wrap">

      <p class="login-img"><i class="fa fa-user-plus" aria-hidden="true"></i></p>
      <span>Логин:</span>
      <div class="input-group">
        <span class="input-group-addon"><i class="icon_profile"></i></span>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Логин' %>
      </div>
      <span>Почта:</span>
      <div class="input-group">
        <span class="input-group-addon"><i class="icon_mail"></i></span>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Почта' %>
      </div>
      <% if @minimum_password_length %>
          <span>Пароль: </span><em>(<%= @minimum_password_length %> минимум символов)</em>
      <% end %><br/>
      <div class="input-group">
        <span class="input-group-addon"><i class="icon_key_alt"></i></span>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Пароль' %>
      </div>
      <span>Повторный пароль:</span>
      <div class="input-group">
        <span class="input-group-addon"><i class="icon_key_alt"></i></span>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Повторите пароль' %>
      </div>

      <span>Текущий пароль:</span>
      <div class="input-group">
        <span class="input-group-addon"><i class="icon_key_alt"></i></span>
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Текущий пароль'  %>
      </div>

      <%= f.submit "Обновить", class: 'btn btn-primary btn-lg btn-block' %>

      <%= link_to adminpanel_path, class: 'btn btn-info btn-lg btn-block rootReg' do %>
          <span>Назад</span>
      <% end %>

    </div>

<% end %>



