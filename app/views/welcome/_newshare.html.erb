<% unless @new.blank? %>
<div class="hidden-xs col-xs-6 col-sm-12">
  <h4 class="text-center">Новинки</h4>
  <div class="color2 text-center autoplay2">
    <% @new.each do |product| %>
        <div>
          <%= link_to product do %>
              <span class="colorline"><%= image_tag 'new.png' if product.new == 1 %></span>
              <div class="foto-2ok"><%= image_tag product.image, title: product.name, alt: product.name %></div>
              <p class="cor"><%= product.name %></p>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
<% end %>

<% unless @share.blank? %>
<div class="hidden-xs col-xs-6 col-sm-12">
  <h4 class="text-center">Акции</h4>
  <div class="color2 text-center autoplay2">
    <% @share.each do |product| %>
        <div class="">
          <%= link_to product do %>
              <span class="colorline2"><%= image_tag 'sale.png' if product.share == 1 %></span>
              <div class="foto-2ok">
                <%= image_tag product.image, title: product.name, alt: product.name %>
              </div>
              <p class="cor"><%= product.name %></p>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
<% end %>